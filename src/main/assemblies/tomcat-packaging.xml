<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
  <id>tomcat-packaging</id>
  <formats>
    <format>dir</format>
  </formats>
  <includeBaseDirectory>true</includeBaseDirectory>
  <baseDirectory>${project.build.finalName}</baseDirectory>
  <fileSets>
    <!-- Unix shell scripts with exec rights -->
    <fileSet>
      <outputDirectory>/</outputDirectory>
      <directory>${project.build.directory}/${project.build.finalName}/dependencies/apache-tomcat/apache-tomcat-${tomcat.version}/</directory>
      <fileMode>0755</fileMode>
      <filtered>false</filtered>
      <lineEnding>keep</lineEnding>
      <includes>
        <include>**/*.sh</include>
      </includes>
    </fileSet>
    <!-- Others files -->
    <fileSet>
      <outputDirectory>/</outputDirectory>
      <directory>${project.build.directory}/${project.build.finalName}/dependencies/apache-tomcat/apache-tomcat-${tomcat.version}/</directory>
      <filtered>false</filtered>
      <lineEnding>keep</lineEnding>
      <excludes>
        <exclude>**/*.sh</exclude>
        <!-- We need to exclude everything we override -->
        <exclude>**/conf/logging.properties</exclude>
        <exclude>**/conf/Catalina/localhost/*</exclude>
        <exclude>**/conf/tomcat-users.xml</exclude>
        <exclude>**/webapps/**</exclude>
        <exclude>**/LICENSE*</exclude>
        <exclude>**/NOTICE*</exclude>
        <exclude>**/RELEASE-NOTES*</exclude>
        <exclude>**/RUNNING*</exclude>
      </excludes>
    </fileSet>
    <!-- eXo platform - License file and related -->
    <fileSet>
      <outputDirectory>/</outputDirectory>
      <directory>${project.build.directory}/maven-shared-archive-resources/</directory>
      <filtered>false</filtered>
      <lineEnding>windows</lineEnding>
      <includes>
        <include>**/DEPENDENCIES.txt</include>
        <include>**/LICENSE.txt</include>
        <include>**/NOTICE.txt</include>
      </includes>
    </fileSet>
    <!-- Unix shell scripts with exec rights -->
    <fileSet>
      <outputDirectory>/bin/</outputDirectory>
      <directory>${project.basedir}/src/main/tomcat/bin/</directory>
      <fileMode>0755</fileMode>
      <filtered>true</filtered>
      <lineEnding>unix</lineEnding>
      <includes>
        <include>**/*.sh</include>
      </includes>
    </fileSet>
    <!-- Others bin files -->
    <fileSet>
      <outputDirectory>/bin/</outputDirectory>
      <directory>${project.basedir}/src/main/tomcat/bin/</directory>
      <filtered>true</filtered>
      <lineEnding>windows</lineEnding>
      <excludes>
        <exclude>**/*.sh</exclude>
      </excludes>
    </fileSet>
    <!-- conf files -->
    <fileSet>
      <outputDirectory>/conf/</outputDirectory>
      <directory>${project.basedir}/src/main/tomcat/conf/</directory>
      <filtered>false</filtered>
      <lineEnding>windows</lineEnding>
    </fileSet>
  </fileSets>
  <dependencySets>
    <!-- Extract license file -->
    <dependencySet>
      <outputDirectory>/</outputDirectory>
      <includes>
        <include>org.exoplatform.resources:exo-lgpl-license-resource-bundle:*</include>
      </includes>
      <scope>provided</scope>
      <unpack>true</unpack>
      <unpackOptions>
        <includes>
          <include>**/LICENSE.txt</include>
        </includes>
      </unpackOptions>
      <useProjectArtifact>false</useProjectArtifact>
    </dependencySet>
    <!-- We add few artifacts to use slf4j/logback -->
    <dependencySet>
      <outputDirectory>/lib</outputDirectory>
      <includes>
        <include>org.slf4j:slf4j-api:*</include>
        <include>org.slf4j:jul-to-slf4j:*</include>
      </includes>
      <outputFileNameMapping>${artifact.artifactId}-${artifact.baseVersion}.${artifact.extension}</outputFileNameMapping>
      <useProjectArtifact>false</useProjectArtifact>
    </dependencySet>
    <dependencySet>
      <outputDirectory>/lib</outputDirectory>
      <includes>
        <!-- This artifact isn't by default in tomcat -->
        <include>org.apache.tomcat:tomcat-catalina-jmx-remote:*</include>
        <!-- Logback -->
        <include>ch.qos.logback:logback-classic:*</include>
        <include>ch.qos.logback:logback-core:*</include>
        <!-- Required by logback for colorized console on windows -->
        <include>org.fusesource.jansi:jansi:*</include>
      </includes>
      <scope>provided</scope>
      <outputFileNameMapping>${artifact.artifactId}-${artifact.baseVersion}.${artifact.extension}</outputFileNameMapping>
      <useProjectArtifact>false</useProjectArtifact>
    </dependencySet>
    <!-- ================================ -->
    <!-- we reference each war to package -->
    <!-- ================================ -->
    <!-- Portal wars -->
    <dependencySet>
      <outputDirectory>/webapps</outputDirectory>
      <includes>
        <include>${project.groupId}:${project.artifactId}:war</include>
      </includes>
      <scope>provided</scope>
      <outputFileNameMapping>ROOT.war</outputFileNameMapping>
      <useProjectArtifact>true</useProjectArtifact>
    </dependencySet>
  </dependencySets>
</assembly>