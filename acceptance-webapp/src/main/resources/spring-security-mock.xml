<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:security="http://www.springframework.org/schema/security"
       xmlns:bean="http://www.springframework.org/schema/beans" xmlns="http://www.springframework.org/schema/beans"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
		http://www.springframework.org/schema/security http://www.springframework.org/schema/security/spring-security-3.1.xsd"
       profile="test,dev">

  <security:authentication-manager alias="authenticationManager">
    <security:authentication-provider ref="mockedAuthenticationProvider"/>
  </security:authentication-manager>

  <!-- Administration Role -->
  <bean id="adminRole" class="org.springframework.security.core.authority.SimpleGrantedAuthority">
    <bean:constructor-arg value="ROLE_${crowd.group.administrators}"/>
  </bean>

  <!-- User Role -->
  <bean id="userRole" class="org.springframework.security.core.authority.SimpleGrantedAuthority">
    <bean:constructor-arg value="ROLE_${crowd.group.users}"/>
  </bean>

  <bean id="mockedAdministrator" class="org.exoplatform.acceptance.security.CrowdUserMock">
    <bean:property name="username" value="admin"/>
    <bean:property name="password" value="admin"/>
    <bean:property name="firstName" value="Super"/>
    <bean:property name="lastName" value="Admin"/>
    <bean:property name="email" value="exo-swf@exoplatform.com"/>
    <bean:property name="authorities">
      <list>
        <bean:ref bean="adminRole"/>
        <bean:ref bean="userRole"/>
      </list>
    </bean:property>
  </bean>
  <bean id="mockedUser" class="org.exoplatform.acceptance.security.CrowdUserMock">
    <bean:property name="username" value="user"/>
    <bean:property name="password" value="user"/>
    <bean:property name="firstName" value="Famous"/>
    <bean:property name="lastName" value="User"/>
    <bean:property name="email" value="exo-swf@exoplatform.com"/>
    <bean:property name="authorities">
      <list>
        <bean:ref bean="userRole"/>
      </list>
    </bean:property>
  </bean>
  <bean id="mockedAnonymous" class="org.exoplatform.acceptance.security.CrowdUserMock">
    <bean:property name="username" value="anonymousUser"/>
    <bean:property name="firstName" value="Anonymous"/>
    <bean:property name="lastName" value="User"/>
    <bean:property name="email" value="exo-swf@exoplatform.com"/>
    <bean:property name="authorities">
      <list>
        <bean id="anonymousRole" class="org.springframework.security.core.authority.SimpleGrantedAuthority">
          <bean:constructor-arg value="ROLE_ANONYMOUS"/>
        </bean>
      </list>
    </bean:property>
  </bean>
  <bean id="crowdUserDetailsService" class="org.exoplatform.acceptance.security.MockedCrowdUserDetailsService">
    <bean:constructor-arg name="user" ref="mockedUser"/>
    <bean:constructor-arg name="administrator" ref="mockedAdministrator"/>
    <bean:constructor-arg name="anonymous" ref="mockedAnonymous"/>
  </bean>
  <bean id="mockedAuthenticationProvider" class="org.exoplatform.acceptance.security.MockedAuthenticationProvider">
    <bean:constructor-arg name="user" ref="mockedUser"/>
    <bean:constructor-arg name="administrator" ref="mockedAdministrator"/>
  </bean>

</beans>
