          </dependency>
          <dependency>
            <groupId>ch.qos.logback</groupId>
            <artifactId>logback-core</artifactId>
            <version>${logback.version}</version>
          </dependency>
        </dependencies>
        <configuration>
          <path>/</path>
          <tomcatLoggingFile>${project.basedir}/src/main/resources/logging.properties</tomcatLoggingFile>
          <additionalConfigFilesDir>${project.basedir}/src/main/resources/</additionalConfigFilesDir>
          <!-- Use a separation classloader to avoid conflicts with SLF4J -->
          <useSeparateTomcatClassLoader>true</useSeparateTomcatClassLoader>
          <!-- The delay in seconds between each classPathScanning change invocation -->
          <backgroundProcessorDelay>5</backgroundProcessorDelay>
          <!-- Force context scanning if you don't use a context file with reloadable = "true" -->
          <contextReloadable>true</contextReloadable>
        </configuration>
      </plugin>
